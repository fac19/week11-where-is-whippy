{
  "scripts": {
    "start": "node server.js",
    "test": "JWT_SECRET=mysecret PGDATABASE=travis_ci_test jest --coverage=true",
    "test-all": "cd client-app && npm test && cd .. && cd server-api && npm test",
    "initdb": "node server-api/db/build.js",
    "deploy": "git subtree push --prefix server-api heroku master"
  },
  "devDependencies": {
    "codecov": "^3.7.0",
    "husky": "^4.2.5"
  },
  "dependencies": {
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged"
    ]
  }
}
